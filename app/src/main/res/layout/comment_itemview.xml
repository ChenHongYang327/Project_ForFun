<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/comment_bt_membetHead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/post_memberhead" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment_memberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="name" />

                <TextView
                    android:id="@+id/comment_text"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center_vertical|center"
                    android:gravity="center_horizontal"
                    android:hint="comment"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout">

            <ImageButton
                android:id="@+id/comment_bt_report"
                android:layout_width="32dp"
                android:layout_height="22dp"
                android:background="@drawable/shap"
                app:srcCompat="@drawable/bt_more_comment" />

            <ImageButton
                android:id="@+id/comment_bt_more"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:background="@drawable/shap"
                app:srcCompat="@drawable/bt_report_comment" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>