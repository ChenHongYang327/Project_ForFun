<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="336dp"
    android:layout_height="350dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/post_item_bt_memberhead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/post_memberhead" />

            <LinearLayout
                android:layout_width="247dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_item_memberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="name" />

                <TextView
                    android:id="@+id/post_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="time" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/post_item_bt_more"
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/bt_more" />

        </LinearLayout>

        <TextView
            android:id="@+id/post_item_title"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:hint="Title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/post_item_context"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:hint="context" />

        <ImageView
            android:id="@+id/post_item_house_img"
            android:layout_width="336dp"
            android:layout_height="166dp"
            tools:srcCompat="@drawable/post_houseimg_test" />
    </LinearLayout>
</androidx.cardview.widget.CardView>