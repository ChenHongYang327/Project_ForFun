<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".orderconfirm.Orderconfirm_mainfragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/orderconfirm_main_tabs"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@color/main_color"
        app:tabIndicatorColor="@color/bottom_choose"
        app:tabMode="scrollable"
        app:tabRippleColor="@color/main_color"
        app:tabSelectedTextColor="@color/bottom_choose">

    </com.google.android.material.tabs.TabLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/bt_orderconfirm_mainfragment_HouseOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/bt_9044blank"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是房東"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/bt_orderconfirm_mainfragment_HouseOwner"
            app:layout_constraintEnd_toEndOf="@+id/bt_orderconfirm_mainfragment_HouseOwner"
            app:layout_constraintStart_toStartOf="@+id/bt_orderconfirm_mainfragment_HouseOwner"
            app:layout_constraintTop_toTopOf="@+id/bt_orderconfirm_mainfragment_HouseOwner" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/orderconfirm_main_viewpage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </androidx.viewpager2.widget.ViewPager2>

</LinearLayout>